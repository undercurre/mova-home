<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/common_shape_white_text_r8"
    android:orientation="horizontal">

    <android.dreame.module.view.input.LimitEditText
        android:id="@+id/et_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:ellipsize="end"
        android:gravity="center_vertical|start"
        android:lines="1"
        android:paddingHorizontal="12dp"
        android:textColor="@color/common_textMain"
        android:textColorHint="@color/common_textSecond"
        android:textCursorDrawable="@drawable/shape_input_cursor_color"
        android:textSize="@dimen/common_textLarge"
        tool:text="请输入密码请输入密码请输入密码请输入密码请输入密码请输" />


    <ImageView
        android:id="@+id/iv_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="20dp"
        android:src="@drawable/icon_input_clear" />

    <CheckedTextView
        android:id="@+id/cb_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:background="@drawable/common_selector_pwd_show_hide"
        android:checked="true" />
</LinearLayout>
