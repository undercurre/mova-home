<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/cl_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_status_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tool:layout_height="24dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_center_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_status_bar">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:padding="5dp"
            android:src="@drawable/icon_back_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_center_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:autoSizeMaxTextSize="@dimen/common_textSizeLarge1"
            android:autoSizeMinTextSize="@dimen/common_textSmall"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:breakStrategy="high_quality"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textAlignment="gravity"
            android:textColor="@color/common_textMain"
            android:textSize="@dimen/common_textSizeLarge1"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/tv_center_subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1"
            tool:text="我的反馈我的反馈我的反馈我的反馈我的反馈我的反馈我的反"
            tool:visibility="visible" />

        <TextView
            android:id="@+id/tv_center_subtitle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:autoSizeMaxTextSize="@dimen/common_textSizeLarge1"
            android:autoSizeMinTextSize="@dimen/common_textSmall"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:breakStrategy="high_quality"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textAlignment="gravity"
            android:textColor="@color/common_textSecond"
            android:textSize="@dimen/common_textSmall"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_center_title"
            app:layout_constraintVertical_weight="1"
            tool:text="我的反馈我的反馈我的反     馈我的反馈我的反馈我的反馈我的反"
            tool:visibility="visible" />


        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:padding="5dp"
            android:src="@drawable/icon_arrow_right_gray"
            app:layout_constraintBottom_toBottomOf="@id/tv_center_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_center_title" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:maxWidth="80dp"
            android:textColor="@color/common_textMain"
            android:textSize="@dimen/common_textNormal"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_center_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_center_title"
            tool:text="我的反馈我的反馈" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
