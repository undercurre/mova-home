<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="32dp"
    android:background="@drawable/common_shape_white_r20"
    android:minHeight="205dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textColor="@color/common_textMain"
        android:textSize="@dimen/common_textLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="绑定手机号" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal"
        android:textAlignment="gravity"
        android:textColor="@color/common_textNormal"
        android:textSize="@dimen/common_textLarge"
        app:layout_constraintBottom_toTopOf="@id/tv_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        tools:text="为了您账号的安全以及方便售后服务支持，请绑定您的手机账号。" />

    <TextView
        android:id="@+id/tv_cancel"
        style="@style/common_style_button2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:autoSizeMaxTextSize="@dimen/common_textLarge"
        android:autoSizeMinTextSize="@dimen/common_textSmall"

        android:autoSizeStepGranularity="1dp"
        android:autoSizeTextType="uniform"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:padding="10dp"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_bind"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="暂不绑定" />

    <Button
        android:id="@+id/btn_bind"
        style="@style/common_style_button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="24dp"
        android:layout_weight="1"
        android:autoSizeMaxTextSize="@dimen/common_textLarge"
        android:autoSizeMinTextSize="@dimen/common_textSmall"

        android:autoSizeStepGranularity="1dp"
        android:autoSizeTextType="uniform"
        android:clickable="true"
        android:ellipsize="end"
        android:enabled="true"
        android:focusable="true"
        android:gravity="center"
        android:maxLines="2"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@id/tv_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_cancel"
        tools:text="立即绑定" />

</androidx.constraintlayout.widget.ConstraintLayout>