<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="48dp"
    android:background="@drawable/common_shape_white_r20"
    android:minHeight="170dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:lineHeight="22dp"
        android:textAlignment="gravity"
        android:textColor="@color/common_textMain"
        android:textSize="@dimen/common_textNormal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="重命名" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/common_shape_btn_gray_r22"
        android:maxLines="2"
        android:paddingHorizontal="18dp"
        android:paddingEnd="30dp"
        android:singleLine="true"
        android:textColor="@color/common_textMain"
        android:textColorHint="@color/common_textDisable"
        android:textCursorDrawable="@drawable/shape_input_cursor_color"
        android:textSize="@dimen/common_textNormal"
        app:layout_constraintBottom_toTopOf="@id/tv_negative"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        tools:hint="请输入设备新名称" />


    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:src="@drawable/icon_edit_delete"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/et_input"
        app:layout_constraintEnd_toEndOf="@id/et_input"
        app:layout_constraintTop_toTopOf="@id/et_input"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_negative"
        style="@style/common_style_button2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:autoSizeMaxTextSize="@dimen/common_textLarge"
        android:autoSizeMinTextSize="@dimen/common_textSmall"

        android:autoSizeStepGranularity="1dp"
        android:autoSizeTextType="uniform"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_positive"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="cancel" />

    <TextView
        android:id="@+id/tv_positive"
        style="@style/common_style_button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:autoSizeMaxTextSize="@dimen/common_textLarge"
        android:autoSizeMinTextSize="@dimen/common_textSmall"

        android:autoSizeStepGranularity="1dp"
        android:autoSizeTextType="uniform"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toBottomOf="@id/tv_negative"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_negative"
        tools:text="confirm" />

</androidx.constraintlayout.widget.ConstraintLayout>