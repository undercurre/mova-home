<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_container"
    android:gravity="center_vertical|end">

    <LinearLayout
        android:minWidth="120dp"
        android:maxWidth="160dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_shape_bg_dialog_feedback"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="6dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/icon_screen_shot_contact"
                android:drawablePadding="9dp"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxLines="2"
                android:textColor="#ffffff"
                android:textSize="@dimen/common_textNormal"
                android:text="@string/text_contact_us"
                android:visibility="visible"
                tools:text="@string/text_contact_us" />

            <View
                android:visibility="visible"
                android:id="@+id/divider1"
                android:background="#1AFFFFFF"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="6dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/icon_screent_shot_feedback"
                android:drawablePadding="9dp"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxLines="2"
                android:textColor="#ffffff"
                android:textSize="@dimen/common_textNormal"
                android:text="@string/text_product_suggestion"
                tools:text="产品建议" />


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_screen_dialog_line" />

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_screen_dialog_cancel" />

    </LinearLayout>
</RelativeLayout>