<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_shape_white_r8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_device_icon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:paddingTop="8dp"
            android:src="@drawable/icon_robot_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_device_share"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/widget_share_status_bg_r4"
            android:ellipsize="end"
            android:gravity="center"
            android:textAlignment="gravity"
            android:lines="1"
            android:maxWidth="45dp"
            android:minWidth="30dp"
            android:paddingHorizontal="2dp"
            android:text="@string/message_setting_share"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/common_textMini"
            android:autoSizeMinTextSize="@dimen/common_textSmall"
            android:autoSizeStepGranularity="1dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Спільний доступ"
            tools:visibility="visible" />
        <!--        @string/message_setting_share-->
        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:textAlignment="gravity"
            android:lines="2"
            android:paddingBottom="8dp"
            android:textColor="@color/common_textMain"
            android:textSize="@dimen/common_textNormal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_device_icon"
            tools:text="追觅S10 Pro" />

        <CheckedTextView
            android:id="@+id/ctv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/selector_device_select"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/fl_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/common_shape_white50_r8"
        app:layout_constraintBottom_toBottomOf="@id/cl_bg"
        app:layout_constraintStart_toStartOf="@id/cl_bg"
        app:layout_constraintTop_toTopOf="@id/cl_bg" />
</androidx.constraintlayout.widget.ConstraintLayout>