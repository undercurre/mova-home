<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:theme="@style/Theme.AppWidget.AppWidgetContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@id/tv_device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingEnd="32dp"
                    android:text="追觅S10 Pro"
                    android:textColor="@color/common_text_main"
                    android:textSize="@dimen/common_textLarge"
                    android:textStyle="bold"
                    tools:text="追觅S10" />


                <ImageView
                    android:id="@id/iv_change_device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/tv_device_name"
                    android:layout_centerVertical="true"
                    android:paddingHorizontal="5dp"
                    android:src="@drawable/icon_widget_change_device" />
            </RelativeLayout>


            <TextView
                android:id="@id/tv_device_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="6dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/standby"
                android:textColor="@color/common_textGray"
                android:textSize="@dimen/common_textNormal" />

            <include
                layout="@layout/layout_widget_clean_info"
                android:layout_width="match_parent"
                android:layout_height="20dp" />


        </LinearLayout>

        <ImageView
            android:id="@id/iv_device"
            android:layout_width="90dp"
            android:layout_height="108dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/icon_robot_placeholder" />

    </LinearLayout>


    <include
        layout="@layout/layout_widget_clean_status"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/tv_fast_command"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/text_home_fast_command"
        android:textColor="@color/common_text_main"
        android:textSize="@dimen/common_textNormal"
        android:textStyle="bold" />

    <ListView
        android:id="@id/lv_fast_command"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="6dp"
        android:background="@color/colorTransparent"
        android:divider="@color/colorTransparent"
        android:dividerHeight="8dp"
        android:listSelector="@drawable/bg_item_select_fast_cmd"
        android:scrollbars="none"
        tools:listitem="@layout/widget_item_fast_command" />
</LinearLayout>