<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"

    android:orientation="horizontal">

    <FrameLayout
        android:id="@id/fl_device_clean"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="4dp"
        android:layout_weight="1"
        android:background="@drawable/common_shape_white_r10">

        <ImageView
            android:id="@id/iv_device_clean"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_start_clean_line" />
    </FrameLayout>

    <FrameLayout
        android:id="@id/fl_device_charging"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="4dp"
        android:layout_weight="1"
        android:background="@drawable/common_shape_white_r10">

        <ImageView
            android:id="@id/iv_device_charging"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_start_charge_line" />
    </FrameLayout>

    <FrameLayout
        android:id="@id/fl_device_monitor"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="4dp"
        android:layout_weight="1"
        android:background="@drawable/common_shape_white_r10">

        <ImageView
            android:id="@id/iv_device_monitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_video_line" />
    </FrameLayout>

    <FrameLayout
        android:id="@id/fl_device_fast_command"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="4dp"
        android:layout_weight="1"
        android:background="@drawable/common_shape_white_r10">

        <ImageView
            android:id="@id/iv_device_fast_command"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_fast_command_line" />
    </FrameLayout>
</LinearLayout>
