<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sl_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="88dp"
    app:drag_edge="left">

    <RelativeLayout
        android:id="@+id/rl_cancel_share"
        android:layout_width="100dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_delete_item_message" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/common_shape_white_r12"
        android:id="@+id/cl_item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_device_pic"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/icon_robot_placeholder" />

        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="@dimen/common_textLarge"
            android:autoSizeMinTextSize="10sp"

            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/common_textMain"
            android:textSize="@dimen/common_textLarge"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tv_device_des"
            app:layout_constraintEnd_toStartOf="@id/tv_device_time"
            app:layout_constraintStart_toEndOf="@id/iv_device_pic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="出于工作需要，也源" />

        <TextView
            android:id="@+id/tv_device_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:gravity="end"
            android:minWidth="80dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/common_textSecond"
            android:textSize="@dimen/common_textSmall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_device_name"
            tools:text="10:43" />

        <TextView
            android:id="@+id/tv_device_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="14sp"
            android:autoSizeMinTextSize="9sp"
            android:autoSizePresetSizes="14sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/common_textSecond"
            android:textSize="@dimen/common_textNormal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_operation"
            app:layout_constraintStart_toStartOf="@id/tv_device_name"
            app:layout_constraintTop_toBottomOf="@id/tv_device_name"
            app:layout_constraintVertical_chainStyle="spread"
            tools:text="来自XXX的分享" />

        <TextView
            android:id="@+id/tv_operation"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginBottom="15dp"
            android:drawableEnd="@drawable/icon_arrow_right"
            android:gravity="center"
            android:minWidth="80dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textAllCaps="false"
            android:textColor="@color/common_textSecond"
            android:textSize="@dimen/common_textSmall"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/tv_device_time"
            app:layout_constraintTop_toBottomOf="@id/tv_device_name"
            tools:text="已接受" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="@dimen/common_height_divider"
            android:background="@color/common_color_divider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_device_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.daimajia.swipe.SwipeLayout>

