<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:input="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.dreame.module.view.CommonTitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/text_connect_router"
        app:titleMarginStart="20dp"
        app:titleShowPosition="center"
        tools:layout_height="45dp" />

    <ImageView
        android:id="@+id/iv_device_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:src="@drawable/icon_connect_router_tips"
        app:layout_constraintDimensionRatio="350:156"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleView" />

    <TextView
        android:id="@+id/tv_wifi_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/common_shape_white_text_r8"
        android:drawableEnd="@drawable/icon_arrow_right"
        android:ellipsize="end"
        android:gravity="center_vertical|start"
        android:lines="1"
        android:paddingStart="12dp"
        android:paddingEnd="16dp"
        android:textAlignment="viewStart"
        android:textColor="@color/common_textMain"
        android:textSize="@dimen/common_textLarge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_device_icon"
        tools:text="中华小当家的家庭中华小当家的家庭中华小当家的家" />

    <android.dreame.module.view.input.CommonInputTextField
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/common_shape_white_text_r8"
        android:hint="@string/enter_wifi_pwd"
        android:inputType="textVisiblePassword"
        android:textColor="@color/common_textMain"
        android:textColorHint="@color/common_textDisable"
        android:textSize="@dimen/common_textLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_wifi_name"
        input:common_defaultCipher="false"
        input:common_defaultShowCiphertext="true"
        input:common_showCiphertext="true"
        input:common_showClear="true"
        tools:text="中华小当家的家庭中华小当家的家庭中华小当家的家中华小当家的家庭中华小当家的家庭中华小当家的家" />

    <TextView
        android:id="@+id/tv_password_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp"
        android:text="@string/text_correct_pwd_tip"
        android:textColor="@color/common_textSecond"
        android:textSize="@dimen/common_textSmall"
        app:layout_constraintTop_toBottomOf="@id/et_password" />

    <CheckBox
        android:id="@+id/cb_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:button="@drawable/selector_confirm_checkbox"
        android:checked="false"
        android:paddingHorizontal="5dp"
        android:text="是否保留设备原有日志"
        android:textColor="@color/common_warn1"
        android:textSize="@dimen/common_textNormal"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/tv_password_tips"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:drawablePadding="4dp"
        android:src="@drawable/icon_tips_help"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_tips" />

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="20dp"
        android:text="@string/text_network_band_tip"
        android:textColor="@color/common_warn1"
        android:textSize="@dimen/common_textSmall"
        app:layout_constraintBottom_toTopOf="@id/tv_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_icon" />


    <TextView
        android:id="@+id/tv_confirm"
        style="@style/common_style_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:text="@string/next"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toTopOf="@id/indicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.dreame.feature.connect.views.ConnectIndicatorView
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>