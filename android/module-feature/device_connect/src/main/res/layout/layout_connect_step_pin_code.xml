<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_pinCode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bgWhite">

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/text_input_your_pincode"
        android:textColor="@color/common_textSecond"
        android:textSize="@dimen/common_textNormal"
        app:layout_constraintTop_toTopOf="parent" />

    <com.dreame.feature.connect.views.PinCodeEditText
        android:id="@+id/pinCode"
        android:layout_width="220dp"
        android:focusable="true"
        android:layout_height="53dp"
        android:layout_marginTop="46dp"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tips"
        app:setBorderColor="@color/common_textDisable"
        app:setBorderSpacing="10dp"
        app:setBorderStyle="line"
        app:setFakeBoldText="true"
        app:setFocusBorderColor="@color/common_text_brand"
        app:setInputBorderColor="@color/common_textDisable"
        app:setMaxLength="4"
        app:setStrokeWidth="1dp"
        app:setTextStyle="cipher_text"
        tools:text="1234" />

    <TextView
        android:id="@+id/tv_confirm"
        style="@style/common_style_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="82dp"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/confirm"
        android:textAlignment="gravity"
        app:layout_constraintTop_toBottomOf="@id/pinCode" />
</androidx.constraintlayout.widget.ConstraintLayout>