<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/view_status_bar"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container"
        android:name="com.dreame.tools.step.qrcodecore.ui.cameraX.CameraxScanFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_status_bar">


        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:padding="5dp"
            android:src="@drawable/qr_ic_back"
            app:layout_constraintBottom_toBottomOf="@id/tv_center_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_center_title" />

        <TextView
            android:id="@+id/tv_center_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/scan_add"
            android:textAlignment="gravity"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/common_textSizeLarge1"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tv_where_qrcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:autoSizeMaxTextSize="@dimen/common_textSizeLarge2"
        android:autoSizeMinTextSize="@dimen/common_textSmall"
        android:autoSizeStepGranularity="1dp"
        android:autoSizeTextType="uniform"
        android:gravity="start"
        android:maxLines="2"
        android:text="@string/scan_device_to_connect"
        android:textColor="#ffffff"
        android:textSize="@dimen/common_textSizeLarge2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/tv_view_qr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="4dp"
        android:text="@string/check_where_qr"
        android:textColor="@color/common_brandPrimary"
        android:textSize="@dimen/common_textNormal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_where_qrcode" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.72" />

    <TextView
        android:id="@+id/tv_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:drawableTop="@drawable/qr_ic_scan"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:text="@string/scan_add"
        android:textAlignment="gravity"
        android:textColor="@color/common_brandPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_touch"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_touch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/qr_ic_touch"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:text="@string/qr_text_add_manually"
        android:textAlignment="gravity"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@id/tv_scan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_scan" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_scan_device"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/common_shape_white_r8"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/tv_scan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/iv_device"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/icon_robot_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:text=""
            android:textColor="@color/common_textMain"
            android:textSize="@dimen/common_textLarge"
            app:layout_constraintBottom_toTopOf="@id/tv_device_des"
            app:layout_constraintEnd_toStartOf="@id/iv_right"
            app:layout_constraintStart_toEndOf="@id/iv_device"
            app:layout_constraintTop_toTopOf="@id/iv_device"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="S20 Pro pro pro " />

        <TextView
            android:id="@+id/tv_device_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/search_nearby_device"
            android:textColor="@color/common_textSecond"
            android:textSize="@dimen/common_textSmall"
            app:layout_constraintBottom_toBottomOf="@id/iv_device"
            app:layout_constraintEnd_toEndOf="@id/tv_device_name"
            app:layout_constraintStart_toStartOf="@id/tv_device_name"
            app:layout_constraintTop_toBottomOf="@id/tv_device_name" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>